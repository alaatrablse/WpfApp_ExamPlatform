<Window x:Class="WpfApp1.StartExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Start Exam" Height="341" Width="826">
    <Grid Margin="0,0,0,-6">
        <Label x:Name="labelTitle" Content="Start Exam" FontSize="20" Margin="346,10,346,283" FontWeight="Bold"/>
        <Button Content="Go to exam" HorizontalAlignment="Left" Margin="600,162,0,0" VerticalAlignment="Top" Height="34" Width="78" RenderTransformOrigin="-0.035,0.791" Click="Button_Click_Go"/>
        <TextBox x:Name="textName" HorizontalAlignment="Left" Margin="150,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="405" Height="34" FontSize="16"/>
        <Label  Content="Exam name:" HorizontalAlignment="Left" Margin="40,162,0,0" VerticalAlignment="Top" Height="34" Width="105" FontSize="16"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="706,162,0,0" VerticalAlignment="Top" Height="34" Width="78" RenderTransformOrigin="-0.035,0.791" Click="Button_Click_Cancel"/>
    </Grid>
</Window>
